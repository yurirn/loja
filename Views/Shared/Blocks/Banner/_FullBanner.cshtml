@model IList<DomainCompany.Entities.Banner>
<div class="all-banner-top">
    @if (Model != null && Model.Any())
    {
        <script>
            jQuery(document).ready(function ($) {
                $('.car-banners').slick({
                    infinite: true,
                    autoplay: true,
                    autoplaySpeed: 2000,
                    slidesToScroll: 1,
                    arrows: false,
                    dots: true,
                    accessibility: false,
                    slidesToShow: 1
                });
            });
        </script>

        List<DomainCompany.Entities.Banner> bannerRandom = Model.Where(b => b.Random == true).ToList();
        List<DomainCompany.Entities.Banner> bannerNoRandom = Model.Where(b => b.Random == false).ToList();

        if (bannerRandom.Any() && !bannerNoRandom.Any())
        {

            <div class="ui container car-banners no-margin">
                @foreach (var randombanner in bannerRandom)
                {
                    <a href="@randombanner.Link">
                        <img src="@randombanner.NameFileImage" class="ui fluid image" alt="@randombanner.Name" onerror="imgError(this)" />
                    </a>
                }
            </div>
        }
        if (bannerNoRandom.Any() && !bannerRandom.Any())
        {
            <div class="ui images middle aligned center aligned">
                @foreach (var banner in bannerNoRandom)
                {
                    <a href="@banner.Link">
                        <img src="@banner.NameFileImage" class="ui image" alt="@banner.Name" onerror="imgError(this)" />
                    </a>
                }
            </div>
        }
    }

    <div class="ui container no-margin">
        <div class="ui grid">
            <div class="three column row">
                <div class="column">
                    <img class="ui fluid image" src="https://static1.tcdn.com.br/311840/themes/615/img/home/1-min.jpg?dc24c4fe1c22901ff588c88db8e0419c" />
                </div>
                <div class="column">
                    <img class="ui fluid image" src="https://static1.tcdn.com.br/311840/themes/615/img/home/2-min.jpg?dc24c4fe1c22901ff588c88db8e0419c" />
                </div>
                <div class="column">
                    <img class="ui fluid image" src="https://static1.tcdn.com.br/311840/themes/615/img/home/3-min.jpg?dc24c4fe1c22901ff588c88db8e0419c" />
                </div>
            </div>
        </div>
    </div>
</div>