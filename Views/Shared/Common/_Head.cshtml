@{
    string _classSearch = Session["idEventList"] == null ? "search" : "filterListEventsProducts";
}
<div class="ui container fluid _header">
    <div class="ui container">
        <div class="ui middle aligned three column centered grid">
            <div class="row">
                <div class="ui center aligned sixteen wide mobile six wide tablet three wide computer column">
                    <a href="@(Session["idEventList"] == null ? "/Home" : "#")">
                        <img class="ui middle aligned image" src="/assets/image/logo/logo.png" alt="">
                    </a>
                </div>
                <div class="ui center aligned five wide tablet six wide computer column searchcolumn">
                    <div class="ui category @_classSearch">
                        <div class="ui icon input fluid">
                            <input class="prompt" type="text" placeholder="Oi Cabeleireiro (a)! Faça sua busca aqui.">
                            <i class="search icon"></i>
                        </div>
                        <div class="results"></div>
                    </div>
                </div>
                <div class="ui center aligned sixteen wide mobile ui center aligned five wide tablet three wide computer column">
                   <div class="ui inline dropdown">
                        <div class="text">
                        <img class="ui avatar image" src="https://ecommerceexpress.plataformaneo.com.br/assets/image/logo/whatsapp.png">
                        Whats Sac
                        </div>
                        <i class="dropdown icon"></i>
                        <div class="menu">
                        <div class="item">
                            Escolha o setor:
                        </div>
                        <div class="item">
                            <a href="https://api.whatsapp.com/send?phone=55018998141526" target="_blank"> 
                                <img class="ui avatar image" src="https://ecommerceexpress.plataformaneo.com.br/assets/image/logo/whatsapp.png">
                                Dep. Vendas
                            </a>
                        </div>
                        <div class="item">
                            <a href="https://api.whatsapp.com/send?phone=55018998141526" target="_blank">
                                <img class="ui avatar image" src="https://ecommerceexpress.plataformaneo.com.br/assets/image/logo/whatsapp.png">
                                Dep. Fretes
                            </a>
                        </div>
                       
                        </div>
                    </div>
                </div>
                 
                    <div class="ui center aligned nine wide mobile five wide tablet three wide computer column">
                        @if ((Session["UserAuthenticated"] == null) && (Convert.ToBoolean(Session["Guest"]) != false))
                    {
                        <div class="guest-alert">
                            <a href="/customer">
                                <p>Oie, Faça seu login ;)</p>
                            </a>
                        </div>
                    }
                    </div>
                   
                <div class="ui right aligned three wide mobile five wide tablet one wide computer column">
                    <div class="column cart-span">
                        <i id="cartButton" data-segment="@(Session["segment"] != null ? Session["segment"] : "b2c")" class="shopping bag icon" style="font-size: 2em;"></i>
                       <span>
                           @{
                                if (Session["EventList"] == null)
                                {
                                    @Html.Action("TotalItensCart", "Checkout")
                                }else
	                            {
	                                @Html.Action("TotalItensList", "EventList")
                                }
                            }
                       </span>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>